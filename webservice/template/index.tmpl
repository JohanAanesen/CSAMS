{{define "title"}}Homepage{{end}}
{{define "head"}}{{end}}
{{ define "content" }}
    <main>
        <div class="container pt-3">
            <div class="row">
                <div class="col">
                    <form action="/" method="post">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control form-control-sm border-secondary" name="courseID"
                                   id="course-id" placeholder="Course id" required>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-outline-secondary btn-sm">Join
                                    course
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- /.row -->

            <div class="row">
                {{ range .Courses }}
                    <div class="col-md-6 col-sm-12 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h2 class="display-4">{{ .Code }}</h2>
                                <h3 class="mb-3">{{ .Name }}</h3>
                                <hr>
                                <a href="/course/?id={{ .ID }}" class="btn btn-outline-dark">See Course</a>
                            </div>
                        </div>
                    </div>

                {{ end }}

            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </main>
{{ end }}
{{define "foot"}}
    <script>
        {{ if .Message }}
        confirm("You have successfully joined the course: " + {{ .Message}});
        {{ end }}
    </script>
{{end}}
