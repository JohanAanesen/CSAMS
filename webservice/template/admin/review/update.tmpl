{{define "title"}}Create Review{{end}}
{{define "head"}}{{end}}
{{define "content"}}
    {{if .Errors}}
        {{range .Errors}}
            <div class="alert alert-warning">{{.}}</div>
        {{end}}
    {{end}}
    <div class="row" id="output"></div>
{{end}}
{{define "foot"}}
<script src="/static/js/form.js"></script>
<script>
    let form = new Form();
    form.Initialize({
        output: '#output',
        title: 'Update Review form',
        request: '/admin/review/update',
        weighted: true,
    });
    form.fromJSON({{.formJSON}})
</script>
{{end}}